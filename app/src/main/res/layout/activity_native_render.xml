<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/iv_root_back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <LinearLayout
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/bt_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORWARD" />

        <Button
            android:id="@+id/bt_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="BACKWARD" />

        <Button
            android:id="@+id/bt_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="MOVE_LEFT" />

        <Button
            android:id="@+id/bt_D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="MOVE_RIGHT" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="525dp"
        android:layout_marginTop="20dp"
        android:text="BOOLEAN" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="title1"
        android:textColor="@color/design_default_color_primary"
        android:textSize="28sp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/sb_seekBar"
        style="@android:style/Widget.Holo.SeekBar"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="140dp"
        android:max="100"
        android:min="0" />

    <TextView
        android:id="@+id/tv_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="100dp"
        android:text="title2"
        android:textColor="@color/design_default_color_primary"
        android:textSize="28sp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/sb_seekBar_2"
        style="@android:style/Widget.Holo.SeekBar"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="140dp"
        android:max="100"
        android:min="0" />

    <TextView
        android:id="@+id/tv_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="610dp"
        android:layout_marginTop="100dp"
        android:text="title3"
        android:textColor="@color/design_default_color_primary"
        android:textSize="28sp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/sb_seekBar_3"
        style="@android:style/Widget.Holo.SeekBar"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="610dp"
        android:layout_marginTop="140dp"
        android:max="100"
        android:min="0" />
</RelativeLayout>